{
  "name": "ci_analyst",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "setup:orchestrator": "npm --workspace @ci/orchestrator run setup",
    "dev:web": "npm --workspace @ci/web run dev",
    "dev:orchestrator": "npm --workspace @ci/orchestrator run dev",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "eval": "npm --workspace @ci/eval-harness run eval"
  }
}
