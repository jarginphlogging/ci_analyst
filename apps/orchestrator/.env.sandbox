# Runtime
NODE_ENV=development
PORT=8787

# Provider mode: mock | sandbox | prod
PROVIDER_MODE=sandbox

# Optional semantic model override
SEMANTIC_MODEL_PATH=

# Planning and synthesis controls
REAL_FAST_PLAN_STEPS=2
REAL_DEEP_PLAN_STEPS=4
REAL_ENABLE_PARALLEL_SQL=false
REAL_MAX_PARALLEL_QUERIES=3
REAL_LLM_TEMPERATURE=0.1
REAL_LLM_MAX_TOKENS=1400

# Anthropic (Sandbox LLM)
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_API_VERSION=2023-06-01

# Local Cortex-compatible SQL service
SANDBOX_CORTEX_BASE_URL=http://127.0.0.1:8788/api/v2/cortex/analyst
# Optional local auth token. Leave blank to disable auth in sandbox.
SANDBOX_CORTEX_API_KEY=

# Optional override; default is apps/orchestrator/.sandbox/ci_analyst_sandbox.db
SANDBOX_SQLITE_PATH=
SANDBOX_SEED_RESET=false
