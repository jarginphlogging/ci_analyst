# CI Analyst Orchestrator Runtime Config
# Edit this file directly. No copy step required.

NODE_ENV=development
PORT=8787

# mock | sandbox | prod
PROVIDER_MODE=mock

# Optional semantic model override
SEMANTIC_MODEL_PATH=

# Planning and synthesis controls
REAL_FAST_PLAN_STEPS=2
REAL_DEEP_PLAN_STEPS=4
REAL_ENABLE_PARALLEL_SQL=false
REAL_MAX_PARALLEL_QUERIES=3
REAL_LLM_TEMPERATURE=0.1
REAL_LLM_MAX_TOKENS=1400

# Stream pacing (mock mode only)
MOCK_STREAM_STATUS_DELAY_MS=700
MOCK_STREAM_TOKEN_DELAY_MS=120
MOCK_STREAM_RESPONSE_DELAY_MS=450

# Anthropic (sandbox mode)
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_API_VERSION=2023-06-01

# Local Cortex-compatible SQL service (sandbox mode)
SANDBOX_CORTEX_BASE_URL=http://127.0.0.1:8788/api/v2/cortex/analyst
SANDBOX_CORTEX_API_KEY=sandbox-local-key
SANDBOX_SQLITE_PATH=
SANDBOX_SEED_RESET=false

# Azure OpenAI (prod mode)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_AUTH_MODE=api_key
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_SCOPE=https://cognitiveservices.azure.com/.default
AZURE_TENANT_ID=
AZURE_SPN_CLIENT_ID=
AZURE_SPN_CERT_PATH=
AZURE_SPN_CERT_PASSWORD=
AZURE_OPENAI_GATEWAY_API_KEY=
AZURE_OPENAI_GATEWAY_API_KEY_HEADER=Api-Key

# Snowflake Cortex Analyst REST (prod mode)
SNOWFLAKE_CORTEX_BASE_URL=https://your-account.snowflakecomputing.com/api/v2/cortex/analyst
SNOWFLAKE_CORTEX_API_KEY=
SNOWFLAKE_CORTEX_WAREHOUSE=ANALYST_WH
SNOWFLAKE_CORTEX_DATABASE=CURATED
SNOWFLAKE_CORTEX_SCHEMA=RISK
