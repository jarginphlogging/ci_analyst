{
  "version": "customer-insights.v1",
  "description": "Governed semantic model for customer transaction, spend, and channel analytics.",
  "tables": [
    {
      "name": "cia_sales_insights_cortex",
      "description": "Transaction summary table with repeat/new behavior, channel mix, and spend outcomes.",
      "dimensions": [
        "co_id",
        "td_id",
        "transaction_state",
        "transaction_city",
        "mcc",
        "channel",
        "repeat_flag",
        "resp_date",
        "day_of_week",
        "transaction_time",
        "consumer_commercial"
      ],
      "metrics": [
        "repeat_transactions",
        "new_transactions",
        "repeat_spend",
        "new_spend",
        "cp_transactions",
        "cnp_transactions",
        "cp_spend",
        "cnp_spend",
        "transactions",
        "spend"
      ]
    },
    {
      "name": "cia_household_insights_cortex",
      "description": "Household/store relationship table used to quantify households shopping by location.",
      "dimensions": ["td_id", "date_from", "date_through"],
      "metrics": []
    }
  ],
  "joinRules": [],
  "policy": {
    "restrictedColumns": ["customer_id", "ssn", "account_number", "card_number", "email"],
    "defaultRowLimit": 1000,
    "maxRowLimit": 5000
  }
}
